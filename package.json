    "@types/glob": "^5.0.35",
    "@types/mocha": "^5.2.0",
    "@types/node": "^10.0.3",
    "bluebird": "^3.5.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "ganache-cli": "^6.8.1",
    "glob": "^7.1.2",
    "gulp": "^4.0.2",
    "mocha": "^5.1.1",
    "truffle-contract": "^3.0.5",
    "ts-node": "^6.0.2",
    "tslint": "^5.20.1",
